AT_SETUP([transforming escaped delimiters on create])
AT_KEYWORDS([transform xform delimiter])

AT_TAR_CHECK([
genfile --file file
tar cvf /dev/null file \
   --transform='s/file/other\/name/' \
   --show-transformed-name
],
[0],
[other/name
])

